<!-- core-site.xml  -->
<configuration>
  <property>
    <!-- server name -->
    <name>fs.defaultFS</name>
    <value>hdfs://master</value>
  </property>
  <!-- zookeeper配置 -->
  <property>
    <!-- 一致性协议 -->
     <name>ha.zookeeper.quorum</name>
     <value>node01:2181,node02:2181,node03:2181</value>
  </property>
  <!-- 路径设置 -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/opt/hadoop</value>
  </property>
</configuration>
